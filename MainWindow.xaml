<!-- filepath: d:\MOEBuilder\license\license1\MainWindow.xaml -->
<Window
    x:Class="license1.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    mc:Ignorable="d"
    Title="License Tracker"
    >

    <Grid Background="#1E1E1E">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="License Tracker" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" Margin="10" Foreground="White"/>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <!-- DataGrid -->
            <controls:DataGrid x:Name="LicenseTable" AutoGenerateColumns="False" Margin="10" SelectionMode="Single" Background="Transparent" Foreground="White">
                <controls:DataGrid.Columns>
                    <controls:DataGridTextColumn Header="Software" Binding="{Binding Software}" Width="200"/>
                    <controls:DataGridTextColumn Header="License Key" Binding="{Binding LicenseKey}" Width="200"/>
                    <controls:DataGridTextColumn Header="Expiry Date" Binding="{Binding ExpiryDate}" Width="150"/>
                    <controls:DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="150"/>
                </controls:DataGrid.Columns>
            </controls:DataGrid>

            <!-- Sliding Panel for LicenseDialog -->
            <Border x:Name="LicenseDialogPanel" Background="#2E2E2E" Width="400" HorizontalAlignment="Right" Visibility="Collapsed">
                <StackPanel Margin="10">
                    <TextBox x:Name="SoftwareInput" Header="Software" Margin="0,5"/>
                    <TextBox x:Name="LicenseKeyInput" Header="License Key" Margin="0,5"/>
                    <DatePicker x:Name="ExpiryDateInput" Header="Expiry Date" Margin="0,5"/>
                    <ComboBox x:Name="CategoryInput" Header="Category" Margin="0,5">
                        <ComboBoxItem Content="General"/>
                        <ComboBoxItem Content="Education"/>
                        <ComboBoxItem Content="Security"/>
                        <ComboBoxItem Content="Development"/>
                        <ComboBoxItem Content="Other"/>
                    </ComboBox>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10">
                        <Button Content="Save" Click="SaveLicense_Click" Margin="5" Background="#28A745" Foreground="White"/>
                        <Button Content="Cancel" Click="CancelLicense_Click" Margin="5" Background="#D32F2F" Foreground="White"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Add License" Click="AddLicense_Click" Margin="5" Background="#0078D7" Foreground="White"/>
            <Button Content="Edit Selected" Click="EditLicense_Click" Margin="5" Background="#0078D7" Foreground="White"/>
            <Button Content="Delete Selected" Click="DeleteLicense_Click" Margin="5" Background="#0078D7" Foreground="White"/>
            <Button Content="Export to CSV" Click="ExportCsv_Click" Margin="5" Background="#0078D7" Foreground="White"/>
            <Button Content="Backup Database" Click="BackupDatabase_Click" Margin="5" Background="#0078D7" Foreground="White"/>
            <Button Content="Restore Database" Click="RestoreDatabase_Click" Margin="5" Background="#0078D7" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
