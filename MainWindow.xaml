<Window
    x:Class="license1.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    mc:Ignorable="d"
    Title="License Tracker"
    >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="License Tracker" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="10"/>

        <!-- DataGrid -->
        <controls:DataGrid x:Name="LicenseTable" Grid.Row="1" AutoGenerateColumns="False" Margin="10" SelectionMode="Single">
            <controls:DataGrid.Columns>
                <controls:DataGridTextColumn Header="Software" Binding="{Binding Software}" Width="200"/>
                <controls:DataGridTextColumn Header="License Key" Binding="{Binding LicenseKey}" Width="200"/>
                <controls:DataGridTextColumn Header="Expiry Date" Binding="{Binding ExpiryDate}" Width="150"/>
                <controls:DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="150"/>
            </controls:DataGrid.Columns>
        </controls:DataGrid>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Add License" Click="AddLicense_Click" Margin="5"/>
            <Button Content="Edit Selected" Click="EditLicense_Click" Margin="5"/>
            <Button Content="Delete Selected" Click="DeleteLicense_Click" Margin="5"/>
            <Button Content="Export to CSV" Click="ExportCsv_Click" Margin="5"/>
            <Button Content="Import CSV" Click="ImportCsv_Click" Margin="5"/>
            <Button Content="Backup Database" Click="BackupDatabase_Click" Margin="5"/>
            <Button Content="Restore Database" Click="RestoreDatabase_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
